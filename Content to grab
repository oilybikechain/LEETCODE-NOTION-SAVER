    "activeTab",
    "storage",
    "https://leetcode.com/*",
    "https://api.notion.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },
    "default_title": "LeetNotion Sync",
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["https://leetcode.com/*/*/*/"],
    "js": ["content.js"],
    "run_at": "document_end" 
  }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}

